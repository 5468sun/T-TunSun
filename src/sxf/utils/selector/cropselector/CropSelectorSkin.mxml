<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:lineselector="sxf.utils.selector.lineselector.*" xmlns:cropselector="sxf.utils.selector.cropselector.*"
		minWidth="20" minHeight="20">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("sxf.utils.selector.cropselector.CropSelector")]
	</fx:Metadata>
	<!-- states -->
	<s:states>
		<s:State name="normal" />
		<s:State name="selecting" />
		<s:State name="selected" />
	</s:states>
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="0x008000" alpha="0"/>
		</s:fill>
	</s:Rect>
	<lineselector:AntLine id="_antLine" width="100%" visible="false" visible.selecting="true" />
	<cropselector:SolidLine id="_solidLine" width="100%" visible="false" visible.selected="true" />
	<cropselector:HandleButton id="_bmBtn" visible="false" visible.selected="true" />
	<cropselector:HandleButton id="_mrBtn" visible="false" visible.selected="true" />
	<cropselector:HandleButton id="_brBtn" visible="false" visible.selected="true" />
	<cropselector:HandleButton id="_tmBtn" visible="false" visible.selected="true" />
	<cropselector:HandleButton id="_trBtn" visible="false" visible.selected="true" />
	<cropselector:HandleButton id="_mlBtn" visible="false" visible.selected="true" />
	<cropselector:HandleButton id="_blBtn" visible="false" visible.selected="true" />
	<cropselector:HandleButton id="_tlBtn" visible="false" visible.selected="true" />
	<s:Image id="_mouseCursor"/>
</s:Skin>
