<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:lineselector="sxf.utils.selector.lineselector.*"
		minWidth="20" minHeight="20">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("sxf.utils.selector.lineselector.LineSelector")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="selecting"/>
		<s:State name="selected"/>
	</s:states>
	
	<!-- SkinParts
	name=antLine, type=sxf.utils.selector.lineselector.AntLine, required=false
	-->
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="0x008000" alpha="0.5"/>
		</s:fill>
	</s:Rect>
	<lineselector:AntLine id="antLine" alpha.normal="0" alpha.selecting="0.5" alpha.selected="1" lineAlphaEven.selected="1" />
</s:Skin>
